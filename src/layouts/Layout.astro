---
import "@fontsource/geist-sans/400.css";
import "@fontsource/geist-sans/500.css";
import "@fontsource/geist-sans/700.css";
import "@fontsource-variable/geist-mono";
import "../styles/global.css";

import { useTranslations } from "src/lib/i18n/utils";

const currentLanguage = Astro.currentLocale || "en";
const t = useTranslations(currentLanguage as "en" | "es");
---

<!doctype html>
<html lang={currentLanguage}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{t("head.title")}</title>
    <meta name="description" content={t("head.description")} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Marcelo Oroquieta" />
    <meta
      name="keywords"
      content="Marcelo Oroquieta, Portfolio, Web Developer, Frontend Developer, JavaScript, React, Next.js, TailwindCSS, Supabase, Fullstack Developer"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
