---
import { Image } from "astro:assets";
import { Github, Linkedin, Send } from "@lucide/astro";
---

<section id="hero" class="min-h-screen flex flex-col pl-8">
  <div
    class="grow flex before:content-[''] before:border-l before:border-slate-300 before:translate-x-3 hide-line-effect"
  >
    <div class="flex w-full justify-center items-center font-mono gap-24">
      <div class="flex flex-col max-w-lg gap-3">
        <div class="flex flex-col gap-1">
          <h2 class="text-gray-400 text-xl">Fullstack Web Developer</h2>
          <h1 class="font-sans text-5xl font-semibold sm:whitespace-nowrap">
            Marcelo Oroquieta
          </h1>
          <p class="text-slate-500 leading-6">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
            eiusmod tempor incididunt ut labore et dolore magna aliqua magna
            aliqua magna aliqua.
          </p>
        </div>

        <div class="flex gap-4 bg-white w-fit">
          <div class="flex items-center gap-2 font-sans text-emerald-500">
            <div class="relative w-2.5 h-2.5">
              <span
                class="absolute w-2.5 h-2.5 rounded-full bg-emerald-400 animate-[ping_2s_cubic-bezier(0,0,0.2,1)_infinite]"
                shadow-[0_0_10px_#5EEA6F]></span>
              <span
                class="relative flex h-2.5 w-2.5 rounded-full bg-emerald-500"
              ></span>
            </div>
            Available for Work
          </div>
          <button
            class="bg-slate-700 text-white px-4 py-2 rounded-full flex gap-2 items-center shrink-0 hover:bg-blue-500 cursor-pointer active:transform active:scale-95"
          >
            <Send class="w-4.5 h-4.5" />
            Contact Me
          </button>
        </div>
      </div>
      <div>
        <div class="relative w-110 h-110 group rounded-full">
          <div
            class="absolute top-10 left-1/2 -translate-x-1/2 w-100 h-100 rounded-full bg-gray-200 group-hover:bg-slate-100 transition-all duration-300"
          >
          </div>
          <div
            class="absolute -top-10 left-1/2 -translate-x-1/2 w-100 h-120 rounded-b-full overflow-hidden"
          >
            <Image
              src="/images/picture-me-transparent-bg.png"
              width={500}
              height={500}
              alt="picture of Marcelo Oroquieta"
              class="absolute left-0 w-full h-full grayscale object-cover scale-[1.1] translate-y-[10%] group-hover:scale-[1.2] transition-all duration-300 group-hover:filter-none"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="absolute bottom-0 bg-white py-6">
    <div class="flex flex-col gap-2.5 font-mono">
      <a href="https://github.com/marceoroq" target="_blank">
        <div class="text-slate-500 flex gap-2 hover:text-blue-500">
          <Github class="w-6 h-6" /> /marceoroq
        </div>
      </a>
      <a href="https://www.linkedin.com/in/marcelo-oroquieta/" target="_blank">
        <div class="text-slate-500 flex gap-2 hover:text-blue-500">
          <Linkedin class="w-6 h-6 relative bottom-1" /> /marcelo-oroquieta
        </div>
      </a>
    </div>
  </div>
</section>
