---
import { Image } from "astro:assets";
import { Github, Linkedin, Send, Bot } from "@lucide/astro";
import { CONTACT_EMAIL } from "astro:env/server";

const position = "Frontend Web Developer";
const name = "Marcelo Oroquieta";
---

<section id="hero" class="h-screen min-h-[800px] flex flex-col px-4 md:pl-8">
  <div
    class="flex grow md:before:content-[''] md:before:border-l md:before:border-slate-300 md:before:translate-x-3 hide-line-effect"
  >
    <div
      class="flex flex-col-reverse lg:flex-row w-full justify-center items-center font-mono gap-18 md:gap-24"
    >
      <div class="flex flex-col max-w-lg gap-3">
        <div class="flex flex-col gap-1">
          <h2 class="text-gray-400 text-xl">{position}</h2>
          <h1 class="font-sans text-5xl font-semibold sm:whitespace-nowrap">
            {name}
          </h1>
          <p class="text-slate-500 leading-6">
            Building sleek, high-performing web apps with React and Next.js.
            Expanding my skill set into fullstack architecture and eagerly
            exploring the AI space
            <Bot class="w-4.5 h-4.5 inline mb-1" />.
          </p>
        </div>

        <div class="flex gap-4 bg-white w-full justify-center md:w-fit">
          <div class="flex items-center gap-2 font-sans text-emerald-500">
            <div class="relative w-2.5 h-2.5">
              <span
                class="absolute w-2.5 h-2.5 rounded-full bg-emerald-400 animate-[ping_2s_cubic-bezier(0,0,0.2,1)_infinite]"
                shadow-[0_0_10px_#5EEA6F]></span>
              <span
                class="relative flex h-2.5 w-2.5 rounded-full bg-emerald-500"
              ></span>
            </div>
            Available for Work
          </div>
          <a href={`mailto:${CONTACT_EMAIL}`} target="_blank">
            <button
              class="bg-slate-700 text-white px-4 py-2 rounded-full flex gap-2 items-center shrink-0 hover:bg-blue-500 cursor-pointer active:transform active:scale-95"
            >
              <Send class="w-4.5 h-4.5" />
              Contact Me
            </button>
          </a>
        </div>
      </div>

      <div>
        <div class="relative w-60 h-60 md:w-110 md:h-110 group rounded-full">
          <div
            class="absolute top-5 md:top-10 left-1/2 -translate-x-1/2 w-60 h-60 md:w-100 md:h-100 rounded-full bg-gray-200 group-hover:bg-slate-100 transition-all duration-300"
          >
          </div>
          <div
            class="absolute -top-5 md:-top-10 left-1/2 -translate-x-1/2 w-60 h-70 md:w-100 md:h-120 rounded-b-full overflow-hidden"
          >
            <Image
              src="/images/picture-me-transparent-bg.png"
              width={500}
              height={500}
              alt="picture of Marcelo Oroquieta"
              class="absolute left-0 w-full h-full grayscale object-cover scale-[1] translate-y-[5%] -translate-x-[2%] group-hover:scale-[1.1] transition-all duration-300 group-hover:filter-none"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="hidden md:block absolute bottom-0 bg-white py-6">
    <div class="flex flex-col gap-2.5 font-mono">
      <a href="https://github.com/marceoroq" target="_blank">
        <div class="text-slate-500 flex gap-2 hover:text-blue-500">
          <Github class="w-6 h-6" /> /marceoroq
        </div>
      </a>
      <a href="https://www.linkedin.com/in/marcelo-oroquieta/" target="_blank">
        <div class="text-slate-500 flex gap-2 hover:text-blue-500">
          <Linkedin class="w-6 h-6 relative bottom-1" /> /marcelo-oroquieta
        </div>
      </a>
    </div>
  </div>
</section>
