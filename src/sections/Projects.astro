---
import { Image } from "astro:assets";
import {
  Speech,
  Shirt,
  SquareTerminal,
  ArrowUpRight,
  CirclePlus,
} from "@lucide/astro";

const projects = [
  {
    appName: "PREPWISE APP",
    title: "AI-Powered Interview Practice Platform",
    date: "Sep 2025",
    projectIcon: Speech,
    image: "/images/project-interview.png",
    description:
      "Interactive AI assistant for personalized technical interview practice. Supports real-time voice calls, custom scenario creation, and comprehensive post-session analytics.",
    technologies: [
      "Next.js",
      "React.js",
      "TypeScript",
      "Firebase",
      "Tailwind CSS",
      "Zod",
      "AI SDK",
      "VAPI AI",
    ],
    link: "https://interviewer-ai-green.vercel.app/",
  },
  {
    appName: "SAPPHIRE APP",
    title: "Clothes E-Commerce Platform",
    date: "Jul 2025",
    projectIcon: Shirt,
    image: "/images/project-ecommerce.png",
    description:
      "A modern E-commerce platform high-performance web application leveraging Next.js 15 and React 19. Implements Type-safe database management with Prisma/Neon and robust form validation using Zod and middleware-protected routing, featuring secure authentication, role-based access control, Stripe and Paypal integration.",
    technologies: [
      "Next.js",
      "React.js",
      "TypeScript",
      "Prisma ORM",
      "NeonDB",
      "Stripe",
      "PayPal",
      "Next Auth",
      "Auth.js",
      "Shadcn UI",
      "Tailwind CSS",
      "Framer Motion",
      "Recharts",
      "Zod",
      "Resend",
      "UploadThing",
    ],
    link: "https://ecommerce-bay-nine-22.vercel.app/",
  },
  {
    appName: "PROMPTVERSE APP",
    title: "Sharing AI-Powered Prompts",
    date: "Dec 2024",
    projectIcon: SquareTerminal,
    image: "/images/project-prompt-sharing.png",
    description:
      "A collaborative platform for AI prompt management. Built on a Next.js 15 and MongoDB architecture with advanced tag-based search and authenticated content controls.",
    technologies: [
      "Next.js",
      "React.js",
      "TypeScript",
      "MongoDB",
      "Mongoose",
      "Next Auth",
    ],
    link: "https://share-prompts-henna.vercel.app/",
  },
];
---

<section id="projects" class="w-full flex justify-center bg-slate-200 py-18">
  <div
    class="w-full flex flex-col items-center max-w-5xl px-4 md:px-8 lg:px-0 gap-16"
  >
    <h2 class="text-5xl font-bold text-slate-600">Projects</h2>
    <div class="w-full flex flex-col items-center justify-center gap-8">
      {
        projects.map((project) => {
          const Icon = project.projectIcon;
          return (
            <div class="w-full grid grid-cols-1 lg:grid-cols-5 bg-white p-5 gap-5 rounded-xl shadow-sm hover:scale-102 hover:shadow-xl transition-all">
              <Image
                src={project.image}
                width={380}
                height={200}
                alt={project.title}
                class="w-full h-auto md:h-full shadow-sm aspect-video object-cover object-top col-span-1 lg:col-span-2 rounded-lg"
              />
              <div class="flex flex-col gap-1 font-mono lg:col-span-3">
                <div class="flex justify-between items-center">
                  <div class="flex justify-start items-center gap-2 mb-1 text-slate-500 text-sm tracking-wider">
                    <div class="w-8 h-8 flex justify-center items-center bg-blue-100 rounded-full">
                      <Icon class="w-4 h-4 text-blue-700" />
                    </div>
                    {project.appName}
                  </div>
                  <p class="text-slate-400 text-sm tracking-wider">
                    {project.date}
                  </p>
                </div>
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <h3 class="flex mb-2 gap-1 items-center text-xl font-semibold text-slate-900 group hover:text-blue-600 hover:underline hover:underline-offset-5">
                    {project.title}{" "}
                    <ArrowUpRight class="opacity-0 group-hover:opacity-100 transition-all w-5 h-5" />
                  </h3>
                </a>
                <p class="text-slate-500 font-light mb-2">
                  {project.description}
                </p>
                <div class="flex flex-wrap justify-start items-center gap-2">
                  {project.technologies.map((tech) => (
                    <span class="px-2 py-1 bg-slate-100 text-slate-600 text-sm rounded-full">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
    <!-- <button
      class="bg-slate-700 text-white px-5 font-mono py-3 rounded-full flex gap-2 items-center shrink-0 hover:bg-blue-500 cursor-pointer active:transform active:scale-95"
    >
      <CirclePlus class="w-5 h-5" />
      Load More
    </button> -->
  </div>
</section>
