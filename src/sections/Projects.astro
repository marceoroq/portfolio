---
import { Image } from "astro:assets";
import {
  Speech,
  Shirt,
  SquareTerminal,
  ArrowUpRight,
  CirclePlus,
} from "@lucide/astro";

const projects = [
  {
    appName: "PREPWISE APP",
    title: "AI-Powered Interview Practice Platform",
    date: "Dec 2023",
    projectIcon: Speech,
    image: "/images/project-1.png",
    description:
      "A comprehensive data visualization platform designed to handle high-frequency financial metrics. Rebuilt the core engine to support WebSocket.",
    technologies: [
      "React",
      "TypeScript",
      "Tailwind CSS",
      "Node.js",
      "PostgreSQL",
    ],
    link: "https://interviewer-ai-green.vercel.app/",
  },
  {
    appName: "ZYPHER APP",
    title: "Clothes E-Commerce Platform",
    date: "Dec 2023",
    projectIcon: Shirt,
    image: "/images/project-1.png",
    description:
      "A comprehensive data visualization platform designed to handle high-frequency financial metrics. Rebuilt the core engine to support WebSocket.",
    technologies: [
      "React",
      "TypeScript",
      "Tailwind CSS",
      "Node.js",
      "PostgreSQL",
    ],
    link: "https://ecommerce-bay-nine-22.vercel.app/",
  },
  {
    appName: "PROMPTVERSE APP",
    title: "Sharing AI-Powered Prompts",
    date: "Dec 2023",
    projectIcon: SquareTerminal,
    image: "/images/project-1.png",
    description:
      "A comprehensive data visualization platform designed to handle high-frequency financial metrics. Rebuilt the core engine to support WebSocket.",
    technologies: [
      "React",
      "TypeScript",
      "Tailwind CSS",
      "Node.js",
      "PostgreSQL",
    ],
    link: "https://share-prompts-henna.vercel.app/",
  },
];
---

<section id="projects" class="w-full flex justify-center bg-slate-50 py-18">
  <div class="w-full flex flex-col items-center max-w-5xl px-4 gap-16">
    <h2 class="text-5xl font-bold text-slate-600">Projects</h2>
    <div class="w-full flex flex-col items-center justify-center gap-8">
      {
        projects.map((project) => {
          const Icon = project.projectIcon;
          return (
            <div class="w-full grid grid-cols-5 bg-white p-5 gap-5 rounded-xl shadow-sm hover:scale-102 hover:shadow-xl transition-all cursor-pointer">
              <Image
                src={project.image}
                width={380}
                height={200}
                alt={project.title}
                class="w-full h-48 object-cover col-span-2 rounded-lg"
              />
              <div class="flex flex-col gap-1 font-mono col-span-3">
                <div class="flex justify-start items-center gap-2 mb-1 text-slate-500 text-sm tracking-wider">
                  <div class="w-8 h-8 flex justify-center items-center bg-blue-100 rounded-full">
                    <Icon class="w-4 h-4 text-blue-700" />
                  </div>
                  {project.appName}
                </div>
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <h3 class="flex mb-2 gap-1 items-center text-xl font-semibold text-slate-900 group hover:text-blue-600 hover:underline hover:underline-offset-5">
                    {project.title}{" "}
                    <ArrowUpRight class="opacity-0 group-hover:opacity-100 transition-all w-5 h-5" />
                  </h3>
                </a>
                <p class="text-slate-500 font-light mb-2">
                  {project.description}
                </p>
                <div class="flex justify-start items-center gap-2">
                  {project.technologies.map((tech) => (
                    <span class="px-2 py-1 bg-slate-100 text-slate-600 text-sm rounded-full">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          );
        })
      }
    </div>
    <button
      class="bg-slate-700 text-white px-5 font-mono py-3 rounded-full flex gap-2 items-center shrink-0 hover:bg-blue-500 cursor-pointer active:transform active:scale-95"
    >
      <CirclePlus class="w-5 h-5" />
      Load More
    </button>
  </div>
</section>
